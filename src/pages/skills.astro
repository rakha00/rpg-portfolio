---
import MainLayout from "../layouts/MainLayout.astro";

const skillCategories = [
  {
    name: "Languages",
    skills: ["JavaScript", "TypeScript", "HTML5", "CSS3", "SQL"],
  },
  {
    name: "Frameworks / Libraries",
    skills: ["Node.js", "Express", "Astro", "React", "Tailwind CSS"],
  },
  {
    name: "Tools & Platforms",
    skills: ["Git", "GitHub", "Docker", "Vercel", "Postman"],
  },
];
---

<MainLayout title="Skills - RPG Portfolio">
  <div class="container mx-auto p-4 md:p-8">
    <h1 class="text-3xl md:text-4xl text-center mb-8 text-yellow-300">
      The Forest of Skills
    </h1>
    <p class="text-center mb-12">
      Sacred arts discovered deep within the mystical forest.
    </p>

    <div class="max-w-5xl mx-auto space-y-12">
      {
        skillCategories.map((category) => (
          <div>
            <h2 class="text-2xl text-white border-b-2 border-gray-600 pb-2 mb-6">
              {category.name}
            </h2>
            <div class="flex flex-wrap gap-4">
              {category.skills.map((skill) => (
                <div class="bg-gray-700 border border-gray-500 rounded-md px-4 py-2 text-lg text-gray-200 hover:bg-gray-600 hover:text-white transition-colors">
                  {skill}
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
