---
// src/pages/about.astro
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="About Me - RPG Portfolio">
  <div
    class="min-h-screen w-full bg-cover bg-center flex items-center justify-center p-4"
    style="background-image: url('/images/village-bg.png');"
  >
    <div class="container mx-auto">
      <h1
        class="text-3xl md:text-4xl text-center mb-8 text-white"
        style="text-shadow: 2px 2px 4px #000;"
      >
        The Village of Beginnings
      </h1>

      <div
        class="max-w-4xl mx-auto bg-gray-800/80 backdrop-blur-sm border-2 border-gray-600 rounded-lg p-8"
      >
        <div class="flex flex-col md:flex-row items-center gap-8">
          <img
            src="/images/avatar.png"
            alt="Pixel art avatar of the site owner"
            class="w-48 h-48 border-4 border-gray-500 rounded-full flex-shrink-0 object-cover"
          />

          <div>
            <h2 class="text-3xl text-white">Rakhadinar Jaladara</h2>
            <p class="text-yellow-400 text-lg mb-4">Level 5 Web Developer</p>

            <p class="text-gray-200 leading-relaxed font-sans text-2xl">
              A developer on a quest into the digital world. My focus is on
              backend development, crafting clean and powerful solutions. I
              leverage Artificial Intelligence as a force multiplier to
              accelerate complex tasks and find innovative solutions.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
